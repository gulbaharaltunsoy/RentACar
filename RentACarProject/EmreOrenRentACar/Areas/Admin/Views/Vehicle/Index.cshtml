@model IEnumerable<EmreOrenRentACar.Models.Vehicle>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link rel="icon" type="image/png" href="~/UserRentalAttribute/images/icons/favicon.ico" />
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/UserRentalAttribute/vendor/bootstrap/css/bootstrap.min.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/UserRentalAttribute/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/UserRentalAttribute/vendor/animate/animate.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/UserRentalAttribute/vendor/select2/select2.min.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/UserRentalAttribute/vendor/perfect-scrollbar/perfect-scrollbar.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/UserRentalAttribute/css/util.css">
<link rel="stylesheet" type="text/css" href="~/UserRentalAttribute/css/main.css">

<br />
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<br />
<div class="table100 ver2 m-b-110">
    <div class="table100-head">
        <table>
            <thead>
                <tr class="row100 head text-center">
                    <th class="cell100 column2">@Html.DisplayNameFor(model => model.VehicleType.Type)</th>
                    <th class="cell100 column3">@Html.DisplayNameFor(model => model.Brand)</th>
                    <th class="cell100 column4">@Html.DisplayNameFor(model => model.Model)</th>
                    <th class="cell100 column5">@Html.DisplayNameFor(model => model.Year)</th>
                    <th class="cell100 column6">@Html.DisplayNameFor(model => model.DailyPrice)</th>
                </tr>
            </thead>
        </table>
    </div>

    <div class="table100-body js-pscroll">
        <table>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="row100 body">
                        <td class="cell100 column2">@Html.DisplayFor(model => item.VehicleType.Type)</td>
                        <td class="cell100 column3">@Html.DisplayFor(model => item.Brand)</td>
                        <td class="cell100 column4">@Html.DisplayFor(model => item.Model)</td>
                        <td class="cell100 column5">@Html.DisplayFor(model => item.Year)</td>
                        <td class="cell100 column6">@Html.DisplayFor(model => item.DailyPrice)₺</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

<script src="~/UserRentalAttribute/vendor/jquery/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
<script src="~/UserRentalAttribute/vendor/bootstrap/js/popper.js"></script>
<script src="~/UserRentalAttribute/vendor/bootstrap/js/bootstrap.min.js"></script>
<!--===============================================================================================-->
<script src="~/UserRentalAttribute/vendor/select2/select2.min.js"></script>
<!--===============================================================================================-->
<script src="~/UserRentalAttribute/vendor/perfect-scrollbar/perfect-scrollbar.min.js"></script>
<script>
    $('.js-pscroll').each(function () {
        var ps = new PerfectScrollbar(this);

        $(window).on('resize', function () {
            ps.update();
        })
    });


</script>
<!--===============================================================================================-->
<script src="~/UserRentalAttribute/js/main.js"></script>


