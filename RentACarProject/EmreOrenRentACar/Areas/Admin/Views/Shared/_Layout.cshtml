<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Emre Ören Rent A Car</title>
    @Styles.Render("~/style")
</head>
<body>
    @using EmreOrenRentACar.ModelView;

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        @Html.ActionLink("Emre Ören Admin Panel", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>


        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")">@Html.ActionLink("Ana Sayfa", "Index", "Home", new { area = "Admin" }, new { @class = "nav-link" })</li>
                <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Vehicles" ? "active" : "")">@Html.ActionLink("Vehicle", "Index", "Vehicle", new { area = "Admin" }, new { @class = "nav-link" })</li>
                <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Users" ? "active" : "")">@Html.ActionLink("User", "Index", "User", new { area = "Admin" }, new { @class = "nav-link" })</li>
            </ul>
            <ul class="navbar-nav my-2 my-lg-0 mx-7">
                <li class="nav-item">@Html.ActionLink("Web Sitesine Dön", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="text-center">&copy; @DateTime.Now.Year - Emre Ören Rent a Car</p>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>


    @RenderSection("scripts", required: false)

</body>
</html>
